#include<stdio.h>
#include<math.h>
long long int res=0;
long long int power(long long int x) //complete this function so it returns 2^x
{
	for(long long int i=0;i<=x;i++)
    {
        res=res+(pow(2,i));
    }
    return res;
}
int main()
{
	long long int N, S;
	scanf("%lld", &N);
	S = power(N);
	printf("%lld", S);
	return 0;
}
